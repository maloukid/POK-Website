body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

header {
    background: #333;
    color: #fff;
    padding: 1em 0;
}

nav ul {
    list-style: none;
    display: flex;
    justify-content: center;
    margin: 0;
    padding: 0;
}

nav ul li {
    margin: 0 1em;
}

nav ul li a {
    color: #fff;
    text-decoration: none;
}

section {
    padding: 2em 1em;
    text-align: center;
}

#home {
    background: #f4f4f4;
    padding: 4em 1em;
}

#home h1 {
    margin: 0;
    font-size: 3em;
}

#home p {
    font-size: 1.2em;
}

.btn {
    background: #007BFF;
    color: #fff;
    padding: 0.5em 1em;
    text-decoration: none;
    border-radius: 5px;
    display: inline-block;
    margin-top: 1em;
}

.how-it-works-container {
    display: flex;
    justify-content: space-around;
}

.how-it-works-container .step {
    flex: 1;
    padding: 1em;
    margin: 1em;
    background: #f4f4f4;
    border-radius: 5px;
}

form {
    max-width: 600px;
    margin: 0 auto;
}

form label {
    display: block;
    margin-top: 1em;
}

form input, form textarea {
    width: 100%;
    padding: 0.5em;
    margin-top: 0.5em;
    border-radius: 5px;
    border: 1px solid #ccc;
}

form button {
    margin-top: 1em;
    padding: 0.5em 1em;
    background: #007BFF;
    color: #fff;
    border: none;
    border-radius: 5px;
}

footer {
    background: #333;
    color: #fff;
    text-align: center;
    padding: 1em 0;
    margin-top: 2em;
}
